{
  "name": "foundling-tests",
  "version": "1.0.0",
  "description": "Production-grade testing suite for Foundling prototype",
  "scripts": {
    "test": "jest --coverage --verbose",
    "test:watch": "jest --watch --coverage",
    "test:coverage": "jest --coverage --coverageReporters=html --coverageReporters=text",
    "test:contracts": "hardhat test --network hardhat",
    "test:e2e": "playwright test --reporter=html",
    "test:unit": "jest --testPathPattern=unit --coverage",
    "test:integration": "jest --testPathPattern=integration --coverage",
    "test:performance": "jest --testPathPattern=performance --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2 --forceExit",
    "test:debug": "jest --detectOpenHandles --forceExit --verbose",
    "test:contracts:coverage": "hardhat coverage",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:contracts && npm run test:e2e"
  },
  "dependencies": {
    "@types/node": "^24.2.1",
    "ethers": "^6.15.0",
    "hardhat": "^3.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/user-event": "^14.5.1",
    "@testing-library/vue": "^8.0.1",
    "@types/jest": "^29.5.8",
    "@vue/compiler-sfc": "^3.5.18",
    "@vue/test-utils": "^2.4.3",
    "chai": "^5.2.1",
    "express": "^5.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "pinia": "^3.0.3",
    "playwright": "^1.40.0",
    "solidity-coverage": "^0.8.5",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "vue-jest": "^5.0.0-alpha.10",
    "vue-router": "^4.5.1"
  }
}
